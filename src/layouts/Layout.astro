---
const {title} = Astro.props
const { href } = Astro.props
const nav = [
    {
        href: '/',
        label: 'home'
    },
    {
        href: '/about/about',
        label: 'about'
    },
    {
        href: '/works/hamori',
        label: 'works'
    },
    {
        href: '/blog/blog',
        label: 'blog'
    },
    {
        href: '/contact',
        label: 'contact'
    }
];

import Mordal_back from '../components/mordal-back.astro';
// import '../css/top/style.css'
import '../css/inner/inner.css'
import '../css/root/root.css'
import '../css/layouts/anim-layout.css'
import '../css/layouts/layout.css'
---

<!DOCTYPE html>
<html lang="ja">
    <head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Dela+Gothic+One&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@600&display=swap" rel="stylesheet">
	<link href="https://cdn.jsdelivr.net/npm/destyle.css@1.0.15/destyle.css" rel="stylesheet"/>
	<link rel="stylesheet" href="src/css/inner/inner.css">
	<link rel="stylesheet" href="src/css/root/root.css">
	<title>{title}</title>
</head>
<body>
	<Mordal_back/>
	<header class="header" id="header">
	    <div class="inner inner--header">
			<h2 class="header__logo">
				<a href={href}>{title}</a>
			</h2><!--{title}-->
			<nav class="header-nav">
				<ul class="header-nav__list">
					{nav.map((item)=>
						<li class="header-nav__item"><a class:list="header-nav__link c-black" href={item.href}>{item.label}</a></li>
					)}
				</ul>
			</nav>
			<span class="header-ham" id="js-ham">
				<span class="header-ham__elem" id="js-ham__item1"></span>
				<span class="header-ham__elem" id="js-ham__item2"></span>
				<span class="header-ham__elem" id="js-ham__item3"></span>
			</span>
        </div>

		<div class="header-mordal ds-out" id="js-mordal">
			<h2 class="header-mordal__myname inner">
				Tatsuya Aihara
			</h2>
		    <ul class="header-mordal__list inner">
				{nav.map((item)=>
					<li class="header-mordal__item"><a class:list="header-mordal__link" href={item.href}>{item.label}</a></li>
				)}
			</ul>
			<ul class="header-mordal__sns-list inner">
				<li class="header-mordal__sns-item">
					<a href="https://instagram.com/tatsu_aihara" class="header-mordal__sns-link">
